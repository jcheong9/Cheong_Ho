<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolumeDetailActivity">
    <GridLayout
        android:id="@+id/GridLayoutLayout"
        android:layout_width="match_parent"
        android:columnCount="2"
        android:layout_height="match_parent" >
    <TextView
        android:id="@+id/titleView"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="" />

    <ImageView
        android:id="@+id/thumbnailImage"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        />

    <TextView
        android:id="@+id/authorsLabel"
        android:layout_height="wrap_content"
        android:text="@string/authorsLabel"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:layout_column="0"/>
    <TextView
        android:id="@+id/authors"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_row="2"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/publisherLabel"
        android:layout_height="wrap_content"
        android:text="@string/publisherLabel"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_row="3"
        android:layout_column="0"/>
    <TextView
        android:id="@+id/publisher"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:layout_row="3"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/publishedDateLabel"
        android:layout_height="wrap_content"
        android:text="@string/publishedDateLabel"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_row="4"
        android:layout_column="0"/>
    <TextView
        android:id="@+id/publishedDate"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:layout_row="4"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/isbnLabel"
        android:layout_height="wrap_content"
        android:text="@string/isbnLabel"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_row="5"
        android:layout_column="0"/>
    <TextView
        android:id="@+id/isbnView"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:layout_row="5"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/description"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text=""
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"/>
    </GridLayout>
</ScrollView>